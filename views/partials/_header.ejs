<header>
  <nav class="navbar navbar-expand-md navbar-dark bg-success">
    <a class="navbar-brand" href="/urls">TinyApp</a>
    <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNavAltMarkup" aria-controls="navbarNavAltMarkup" aria-expanded="false" aria-label="Toggle navigation">
      <span class="navbar-toggler-icon"></span>
    </button>
   
    <% if (user && user.email) {%> 
      Logged in as: <%= user.email %><form method="POST" action="/logout"><button class="btn btn-primary" type="submit">Logout</button></form>
    <% } else {%>
      <form method="POST" action="/login">
        <div>
          <label for="email">Email</label>
          <input id="email" type="text" name="email" />
        </div>
        <div>
          <label>Password</label>
          <input type="password" name="password" />
        </div>
        <div>
          <button type="submit">Log in</button>
        </div>
      </form>
    <% } %>
    
    <div class="collapse navbar-collapse" id="navbarNavAltMarkup">
      <div class="navbar-nav">
        <a class="nav-item nav-link" href="/urls">My URLs</a>
        <a class="nav-item nav-link" href="/urls/new">Create New URL</a>
        <a class="nav-item nav-link" href="/register">New User: Register Here</a>
      </div>
    </div>
  </nav>
</header>